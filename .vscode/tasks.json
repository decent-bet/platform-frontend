    "version": "2.0.0",
    "tasks": [
        {
            "label": "open-chrome",
            "type": "shell",
            "command": "./scripts/open-chrome.sh",
            "windows": {
                "command": ".\\scripts\\open-chrome.cmd"
            }
        },
        {
            "label": "run-app",
            "type": "npm",
            "script": "start"
        },
        {
            "label": "run-app:open-chrome",
            "dependsOn": ["run-app", "open-chrome"]
        }
    ]
}